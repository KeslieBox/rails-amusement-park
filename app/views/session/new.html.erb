<%= form_tag '/session', method: :post do %>
    <%= label_tag :name, "Your Name:" %>
    <%= collection_select :user, :name, User.all, :name, :name, prompt: "Select your username here:"%>

    <%= label_tag :password, "Password" %>
    <%= text_field_tag :password %>

    <%= submit_tag "Sign In" %>
<% end %>