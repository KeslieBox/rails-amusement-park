<h1> New User Page</h1>

<%= flash[:message] && flash[:message].each do |m| %>
    <li><%=m%></li>
<%end%>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>  
 
    <%= f.label :password %>
    <%= f.text_field :password %><br>
 
    <%= f.label :height, "Height (in inches)" %>
    <%= f.number_field :height %><br>
 
    <%= f.label :happiness, "How happy are you?" %>
    <%= f.number_field :happiness %><br>
 
    <%= f.label :nausea, "How nauseous are you?" %>
    <%= f.number_field :nausea %><br>
 
    <%= f.label :tickets, "How many dollars do you have in your pocket?" %>
    <%= f.number_field :tickets %><br>
 
    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %><br>
 
    <%= f.submit "Create User" %>
<% end %>


